                <i class="tio-date-range"></i>
                <span class="js-daterangepicker-predefined-preview-movies ml-1"></span>
              </button>
              <!-- End Daterangepicker -->
            </div>
              <div class="col-auto">
                <h4 class="card-header-title">Chọn Phim</h4>

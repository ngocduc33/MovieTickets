          <div class="chartjs-custom mb-4">
            <div class="chartjs-size-monitor">
              <div class="chartjs-size-monitor-expand">
                <div class=""></div>
              </div>
              <div class="chartjs-size-monitor-shrink">
                <div class=""></div>
              </div>
            </div>
            <canvas
              id="js-chart-movies"
              class="js-chart chartjs-render-monitor"
              style="height: 288px; display: block; width: 856px"
              data-hs-chartjs-options='{
                "type": "line",
                "data": {
                    "labels": ["","", ""],
                    "datasets": [{
                      "data": [0,0,0],
                      "label": "Số vé bán được",
                      "fill": false,
                      "borderColor": "#e7eaf3",
                      "tension": "0.1"
                    },
                    {
                      "data": [0,0,0],
                      "label": "Doanh thu",
                      "fill": "false",


        <!-- ==========Header-Section========== -->
        <header class="header-section">
            <div class="container">
                <div class="header-wrapper">
                    <div class="logo">
                        <a href="/user/">
                            <img
                                style="border-radius: 20px"
                                src="/user/images/logo/logo-cinema.png"
                                alt="logo"
                            />
                        </a>
                    </div>
                    <ul class="menu">
                        <li>
                            <a href="/user/">Trang chủ</a>
                        </li>
                        <li>
                            <a href="/user/movie-list">Phim</a>
                        </li>
                        <li>
                            <a href="/user/cluster-list" class="active">Cụm rạp</a>
                        </li>
                        <li>
                            <a href="/user/movie-ticket-plan">Lịch chiếu</a>
                        </li>
                        <li>
                            <a href="/user/contact">Liên hệ</a>
                        </li>
                        <li>
                            <a href="#">Thành viên</a>
                            <ul class="submenu">
                                <% if(currentUser != null && currentUser.user_role ==
                                true) { %>
                                <li>
                                    <a
                                        href="/user/movie-customer-profile"
                                        class="active"
                                        >Tài khoản</a
                                    >
                                </li>
                                <li>
                                    <a href="/user/ticket-list">Vé của tôi</a>
                                </li>
                                <li>
                                    <a href="/admin">Quản lý</a>
                                </li>
                                <% } else { %>
                                <li>
                                    <a
                                        href="/user/movie-customer-profile"
                                        class="active"
                                        >Tài khoản</a
                                    >
                                </li>
                                <li>
                                    <a href="/user/ticket-list">Vé của tôi</a>
                                </li>
        
                                <% } %>
                            </ul>
                        </li>
                        <li class="header-button pr-0">
                            <% if(currentUser) { %>
                            <a><%=currentUser.user_name%></a>
                            <ul class="submenu">
                                <li>
                                    <a href="/user/logout">Đăng xuất</a>
                                </li>
                            </ul>
                            <% } else { %>
                            <a href="/user/sign-in">Đăng nhập</a>
                            <% } %>
                        </li>
                    </ul>
                    <div class="header-bar d-lg-none">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        </header>
        <!-- ==========Header-Section========== -->

        <!-- ==========Sports-Details-Banner========== -->
        <section class="details-banner event-details-banner hero-area bg_img seat-plan-banner style-two" data-background="/user//images/banner/banner10.jpg">
            <div class="container">
                <div class="details-banner-wrapper">
                    <div class="details-banner-content style-two">
                        <h3 class="title">
                            <span class="d-block">
                                <% if(cluster) { %>
                                    <%= cluster && cluster.name %>
                                <% } %>
                            </span>
                        </h3>
                        <span>
                            <% if(cluster) { %>
                                <%= cluster && cluster.address %>
                            <% } %>        
                        </span>
                    </div>
                </div>
            </div>
        </section>
        <!-- ==========Sports-Details-Banner========== -->

        <!-- ==========Blog-Section========== -->
        <section class="blog-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12 mb-50 mb-lg-0">
                        <% if(cluster) { %>
                            <article>
                                <div class="post-item">
                                    <div class="post-thumb">
                                        <div
                                            class="
                                                owl-carousel owl-theme
                                                blog-slider
                                            "
                                        >
                                        <% lstClusterImg.forEach(image => { %>
                                            <img src="data:image/png;base64,<%= image %>" alt="blog" />
                                        <% }) %> 
                                        </div>
                                        <div class="blog-prev">
                                            <i
                                                class="
                                                    flaticon-double-right-arrows-angles
                                                "
                                            ></i>
                                        </div>
                                        <div class="blog-next active">
                                            <i
                                                class="
                                                    flaticon-double-right-arrows-angles
                                                "
                                            ></i>
                                        </div>
                                    </div>
                                    <div class="post-content">
                                        <div class="post-header">
                                            <h4 class="title">
                                                <a href="blog-details.html">
                                                    Một số hình ảnh chi tiết cụm rạp
                                                    <% if(cluster) { %>
                                                        <%= cluster && cluster.name %>
                                                    <% } %>
                                                </a>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>
        <!-- ==========Blog-Section========== -->

        <!-- ==========Event-Section========== -->
        <div class="section-header-3">
            <% if(theaterList) { %>
                <span class="cate">Danh sách các rạp thuộc cụm rạp 
                    <% if(cluster) { %>
                        <%= cluster && cluster.name %>
                    <% } %>
                </span>
            <% } else { %>
                <span class="cate">Hiện chưa có danh sách rạp cho cụm rạp này</span>
            <% } %>
        </div>
        <!-- ==========Event-Section========== -->

        <!-- ==========Movie-Section========== -->
        <div class="ticket-plan-section padding-bottom">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12 mb-5 mb-lg-0">
                        <% if(theaterList) { %>
                            <ul class="seat-plan-wrapper bg-five">
                                <li>
                                    <div class="movie-name">       
                                        <span class="name">Mã rạp</span>
                                    </div>
                                    <div class="movie-schedule">
                                        <span class="theater-size">Kích thước rạp</span>
                                    </div>
                                </li>
                                
                                <% theaterList.forEach((theater) => {  %>
                                    <li>
                                        <div class="movie-name">       
                                            <a href="#0" class="name"><%= theater.name %></a>
                                        </div>
                                        <div class="movie-schedule">
                                            <span>Chiều Dài : <%=theater.vertical_size %>m</span>
                                            <span class="distance"> - </span>
                                            <span>Chiều Rộng : <%=theater.horizontial_size %>m</span>
                                        </div>
                                    </li>       
                                <% }) %>            
                            </ul>
                        <% } %>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62676.68595803536!2d106.8498944!3d10.9412352!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174ddec0ee21221%3A0xa028734f76870ca4!2sThanh%20Tam%20Hospital!5e0!3m2!1sen!2s!4v1626782745703!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
        <!-- ==========Movie-Section========== -->


<!-- ==========Banner-Section========== -->
<section class="details-banner bg_img" data-background="/user/images/banner/banner03.jpg">
    <div class="container">
        <div class="details-banner-wrapper">
            <div class="details-banner-thumb">
                <% if(movie.poster) { %>
                    <img src="data:image/png;base64,<%= movie.poster %>" alt="movie">
                <% } else {%>
                    <img src="/user/images/movie/movie01.jpg" alt="movie">
                <% } %>
                <a href="<%= movie.trailer %>" class="video-popup">
                    <img src="/user/images/movie/video-button.png" alt="movie">
                </a>
            </div>
            <div class="details-banner-content offset-lg-3">
                <h3 class="title">
                    <%= movie.name %>
                </h3>
                <div class="tags">
                    <a href="#0">English</a>
                    <a href="#0">Hindi</a>
                    <a href="#0">Telegu</a>
                    <a href="#0">Tamil</a>
                </div>
                <a href="#0" class="button">horror</a>
                <div class="social-and-duration">
                    <div class="duration-area">
                        <div class="item">
                            <i class="fas fa-calendar-alt"></i><span><%= moment(movie.releaseDate).format( 'DD-MM-YYYY')%></span>
                        </div>
                        <div class="item">
                            <i class="far fa-clock"></i><span><%= movie.duration %></span>
                        </div>
                    </div>
                    <ul class="social-share">
                        <li><a href="#0"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#0"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#0"><i class="fab fa-pinterest-p"></i></a></li>
                        <li><a href="#0"><i class="fab fa-linkedin-in"></i></a></li>
                        <li><a href="#0"><i class="fab fa-google-plus-g"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->


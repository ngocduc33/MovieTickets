<!-- ==========Sign-In-Section========== -->
<section class="account-section bg_img" data-background="/user/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area">
                <div class="section-header-3">
                    <h2 class="title">Đăng nhập</h2>
                </div>
                <form action="/user/sign-in" method="POST" class="account-form">
                    <% if(message) {%>
                        <div class="alert alert-success" id="alert-success" role="alert">
                            <center>
                                <%= message  %>
                            </center>
                        </div>
                        <% } %>
                            <% if(messageErr) {%>
                                <div class="alert alert-danger" id="alert-danger" role="alert">
                                    <center>
                                        <%= messageErr  %>
                                    </center>
                                </div>
                                <% } %>
                    <div id="correct" style="display: block"> </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" placeholder="Nhập vào email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <input type="password" placeholder="nhập vào mật khẩu" id="password" name="password" required>
                    </div>
                    <div class="form-group checkgroup">
                        <input type="checkbox" id="bal2" required checked>
                        <label for="bal2">Lưu thông tin</label>
                        <a href="/user/forgot" class="forget-pass">Quên mật khẩu</a>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Đăng nhập">
                    </div>
                </form>
                <div class="option">
                    Bạn chưa có tài khoản? <a href="/user/sign-up">Đăng ký</a>
                </div>
                <div class="or"><span>Or</span></div>
                <ul class="social-icons">
                    <li>
                        <a href="/user/sign-in-facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/user/sign-in-google">
                            <i class="fab fa-google"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- ==========Sign-In-Section========== -->
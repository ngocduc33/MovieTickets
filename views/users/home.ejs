<!-- ==========Ticket-Search========== -->
<section class="search-ticket-section pt-lg-0">
    <div class="container">
        <div class="search-tab bg_img">
            <div class="row align-items-center mb--20">
                <div class="col-lg-6 mb-20">
                    <div class="search-ticket-header">
                        <h6 class="category">
                            Chào mừng bạn đến với rạp phim của chúng tôi
                        </h6>
                        <h3 class="title">Mua vé online</h3>
                    </div>
                </div>
            </div>
            <div class="tab-area">
                <div class="tab-item active">
                    <form
                        action="/user/movie-ticket-plan"
                        class="ticket-search-form"
                        method="POST"
                    >
                        <div class="form-group">
                            <div class="thumb">
                                <img
                                    src="/user/images/ticket/cinema.png"
                                    alt="ticket"
                                />
                            </div>
                            <span class="type">Chọn phim</span>
                            <select class="select-bar" name="select_movie">
                                <option value=""></option>
                                <% if(listMovies) {%> <% listMovies.map(movie =>
                                { %>
                                <option value="<%= movie.id %>">
                                    <%= movie.name %>
                                </option>
                                <% })} else { %>
                                <option value=""></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="thumb">
                                <img
                                    src="/user/images/ticket/city.png"
                                    alt="ticket"
                                />
                            </div>
                            <span class="type">Chọn rạp</span>
                            <select
                                disabled
                                class="select-bar"
                                name="select_theater_cluster"
                            ></select>
                        </div>
                        <div class="form-group">
                            <div class="thumb">
                                <img
                                    src="/user/images/ticket/date.png"
                                    alt="ticket"
                                />
                            </div>
                            <span class="type">Chọn ngày</span>
                            <select
                                disabled
                                class="select-bar"
                                name="select_date"
                            ></select>
                        </div>
                        <button
                            type="submit"
                            class="custom-button btn-search"
                            id="btn_search"
                        >
                            Đặt vé
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <% if(errors.length > 0){ %>
        <section class="window-warning">
            <div class="lay"></div>
            <div class="warning-item">
                <h6 class="subtitle">Thông báo</h6>
                <h5 class="title"><%= errors[0] %></h5>
            </div>
        </section>
        <% } %>
    </div>
</section>
<!-- ==========Ticket-Search========== -->

